<div class="container mt-4">
<h1>New restaurant</h1>
  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, collection: Restaurant::RESTAURANTS %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
</div>

